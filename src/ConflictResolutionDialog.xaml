<Window x:Class="SkyrimDataInstaller.ConflictResolutionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Conflicts Detected" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="File Conflicts Detected"
                   FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,15" />

        <!-- Instructions -->
        <TextBlock Grid.Row="1"
                   Text="The following files already exist in the destination folder. Select which files you want to overwrite:"
                   TextWrapping="Wrap" Margin="0,0,0,15" />

        <!-- Select All -->
        <CheckBox x:Name="SelectAllCheckBox" Grid.Row="2"
                  Content="Select All" FontWeight="Bold"
                  Margin="0,0,0,10"
                  Checked="SelectAllCheckBox_Checked"
                  Unchecked="SelectAllCheckBox_Unchecked" />

        <!-- Conflicts List -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ConflictsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E0E0E0" BorderThickness="1"
                                Margin="0,0,0,5" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Checkbox and filename -->
                                <CheckBox Grid.Row="0"
                                          Content="{Binding FileName}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          FontWeight="Bold" FontSize="14"
                                          Margin="0,0,0,5"
                                          Checked="FileCheckBox_Checked"
                                          Unchecked="FileCheckBox_Unchecked" />

                                <!-- Existing file info -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,0,3">
                                    <TextBlock Text="Existing: " FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding ExistingSize}" Margin="0,0,10,0" />
                                    <TextBlock Text="Modified: " FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding ExistingModified}" />
                                </StackPanel>

                                <!-- New file info -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20,0,0,0">
                                    <TextBlock Text="New: " FontWeight="SemiBold" Foreground="#007ACC" />
                                    <TextBlock Text="{Binding NewSize}" Foreground="#007ACC" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="4" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button x:Name="SubmitButton" Grid.Column="1"
                    Content="Submit" Padding="20,10"
                    FontSize="14" FontWeight="Bold"
                    Background="#28A745" Foreground="White"
                    Click="SubmitButton_Click"
                    Margin="0,0,10,0" />

            <Button x:Name="CancelButton" Grid.Column="2"
                    Content="Cancel" Padding="20,10"
                    FontSize="14"
                    Background="#6C757D" Foreground="White"
                    Click="CancelButton_Click" />
        </Grid>
    </Grid>
</Window>